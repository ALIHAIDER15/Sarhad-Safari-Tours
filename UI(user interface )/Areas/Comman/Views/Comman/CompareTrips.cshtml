@model Mixed_Models.CrawelCustomModel
@{
    ViewBag.Title = "Compare Trips";
    Layout = "~/Views/Shared/_MainDesign.cshtml";
}
<head>
    <style>
        .cardImage {
            max-height: 284px;
            min-height: 284px;
            width: 100%;
        }

        .cardUl {
            padding-left: 0px;
        }

            .cardUl li {
                display: flex;
            }

                .cardUl li label {
                    font-weight: 900;
                }

                .cardUl li p {
                    font-weight: 500;
                    margin-left: 7px;
                }

        .Cardhover {
            bottom: -180px !important;
            transition: all 0.3s ease 0s;
        }

            .Cardhover:hover {
                bottom: -30px !important;
            }

        .buttonCustom {
            background: linear-gradient(90deg, #ff2f8b 0%, #9035f9 100%);
            border: none;
            padding: 0px,32px;
            padding: 5px 35px;
            font-size: 15px;
            margin-left: 93px;
        }

            .buttonCustom:hover {
                background: #777777;
            }

        .SpanMargin {
            margin-top: 4px;
            margin-right: 8px
        }

        .CardTopLebel {
            max-width: 155px;
            min-width: 155px;
            max-height: 81px;
            min-height: 81px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
    </style>

</head>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>

<!--================Home Banner Area =================-->
<section class="banner_area ">
    <div class="banner_inner overlay d-flex align-items-center">
        <div class="container">
            <div class="banner_content">
                <div class="page_link">
                    @Html.ActionLink("Home", "Index", "Comman")

                    @Html.ActionLink("Compare Trips", "CompareTrips", "Comman")
                </div>
                <h2>Avalibel Packages </h2>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================ Start Trip Package Area =================-->
<section class="package-area section_gap_top">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="ol-lg-12">
                <div class="main_title">
                    <p>We’re Offering these Packages</p>
                    <h1>Packages Comparison</h1>
                    <span class="title-widget-bg"></span>
                </div>
            </div>
        </div>

        <div class="row">

            @*OUR PACKAGES ROW*@
            <div class="row col-md-6" style=" justify-content: center;align-items: center;">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="col-lg-9 col-md-9">
                        <div class="single-package">
                            <div class="thumb">

                                <img src="@Html.DisplayFor(modelItem => modelItem.Packages[i].ImagePath )" style="max-height: 251px; min-height: 251px;" />
                            </div>
                            <p class="date CardTopLebel"><span>Sarhad </span> <br>Packages</p>


                            <ul class="cardUl">


                                <li> <span class="fa fa-location-arrow SpanMargin"></span> <label>Location</label> <p>  @Html.DisplayFor(modelItem => modelItem.Packages[i].PackageName) </p>   </li>

                                <li>  <span class="fa fa-calendar SpanMargin"></span>      <label>Month</label><p>@Html.DisplayFor(modelItem => modelItem.Packages[i].Month)  </p> </li>



                                <li>  <span class="fa fa-star SpanMargin"> </span><label>Days</label> <p>@Html.DisplayFor(modelItem => modelItem.Packages[i].NoOfDays) Days </p> </li>

                                <li><button class="btn btn-primary buttonCustom">Book</button></li>
                            </ul>

                        </div>
                    </div>

                }




            </div>


            @*OTHER WEB SITES PACKAGES ROW*@
            <div class="row col-md-6" style="justify-content: center; align-items: center;">



                @for (int i = 0; i < 7; i++)
                {
                    <div class="col-lg-9 col-md-9" style="">
                        <div class="single-package">
                            <div class="thumb">

                                <img src="@Html.DisplayFor(modelItem => modelItem.Packages[i].ImagePath )" style="max-height: 251px; min-height: 251px;" />
                            </div>
                            <p class="date CardTopLebel"><span>Saiyah </span> <br>Packages</p>

                          
                            <ul class="cardUl">
                           

                                @*<li> <span class="fa fa-location-arrow SpanMargin"></span> <label>Location</label> <p> @Html.DisplayFor(modelItem => modelItem.NameList[i].names) </p>   </li>*@

                                <li>  <span class="fa fa-calendar SpanMargin"></span>       <label>Month</label><p>@Html.DisplayFor(modelItem => modelItem.MonthsList[i].Months)    </p> </li>



                                <li>  <span class="fa fa-star SpanMargin"> </span><label>Days</label> <p>@Html.DisplayFor(modelItem => modelItem.NumOfDayList[i].NumOfDays)  </p> </li>

                                <li><button class="btn btn-primary buttonCustom">Book</button></li>
                            </ul>

                        </div>
                    </div>

                }




            </div>

        </div>
   


    </div>



</section>
