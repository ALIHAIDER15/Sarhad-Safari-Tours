@model IEnumerable<BOL_business_object_layer_.tbl_Guide>
@{
    ViewBag.Title = "Guiders";
    Layout = "~/Views/Shared/_MainDesign.cshtml";
}

<head>
    <style>
       .cardImage{
            max-height: 284px; 
            min-height: 284px;
            width:100%;
          }
        .cardUl{
           padding-left: 0px;
          }

       .cardUl li{
         display: flex;
         }

         .cardUl li label{           
          font-weight: 900;
         }
         .cardUl li p{
          font-weight: 500;
          margin-left: 7px;
        }

        .Cardhover{
           bottom:-180px!important;
           transition: all 0.3s ease 0s;
         }
        .Cardhover:hover {
          bottom: -30px !important;
         }
         .buttonCustom{
         background: linear-gradient(90deg, #ff2f8b 0%, #9035f9 100%);
         border: none;
         padding: 0px,32px;
         padding: 5px 35px;
         font-size: 15px;
         }
        .buttonCustom:hover{
          background: #777777;
         }           
    </style>

</head>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>

<!--================Home Banner Area =================-->
<section class="banner_area ">
    <div class="banner_inner overlay d-flex align-items-center">
        <div class="container">
            <div class="banner_content">
                <div class="page_link">
                    @Html.ActionLink("Home", "Index", "Comman")

                    @Html.ActionLink("Guiders", "Guides", "Comman")
                </div>
                <h2>Tour Guiders</h2>
            </div>
        </div>
    </div>
</section>



<!--================Team Area =================-->
<section class="team_area" style="
        margin-top: 120px
">
    <div class="container">

        <div class="row d-flex justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <p>We’re Offering these Tour Guiders</p>
                    <h1>Intelligent Team Members</h1>
                    <span class="title-widget-bg"></span>
                </div>
            </div>
        </div>

        <div class="row team_inner">
            @foreach (var itme in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="team_item">
                        <div class="team_img">
                            @if (itme.ImagePath != null)
                            {
                                <img src="@Url.Content(itme.ImagePath)" class="cardImage" />
                            }


                            <div class="hover Cardhover" style="">
                                <h4>@itme.Name</h4>

                                <ul class="cardUl">
                                    <li>  <label>Age</label>          <p>@itme.Age</p>  </li>
                                    <li> <label>Experience</label>   <p>@itme.Experience</p></li>
                                    <li> <label>Total Tours</label>    <p>@itme.Total_Tours</p></li>
                                    <li><label>GovtLicense</label>    <p>@itme.Govt_License</p></li>
                                    <li><label>Charges</label>    <p>@itme.Charges</p></li>
                              
                                    @Html.ActionLink("Book", "BookATrip", "Comman", new { Guider_Id = itme.ID  }, new { @class = "btn btn-primary buttonCustom" })
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        </div>
</section>
<!--================End Team Area =================-->



</section>
