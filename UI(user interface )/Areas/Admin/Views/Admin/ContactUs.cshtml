@model IEnumerable<BOL_business_object_layer_.tbl_ContactUs>
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_AdminPannelLayout.cshtml";
}

@section style
{
 <style>

     .HeadingStyle
     {
         font-weight: 300 !important;
         font-size: 18px !important;
     }

</style>
 }

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <!-- OVERVIEW -->
            <div class="panel panel-headline" style="padding: 0px 16px;">
                <div class="panel-heading" style="padding-left: 0px;">
                    <h3 class="panel-title HeadingStyle" >User messages</h3>

                    @if (TempData["Delete"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <i class="fa fa-check-circle"></i>     @TempData["Delete"]
                        </div>

                    }

                </div>
                <div class="PageTypeBg">

                    <div>

                        <table class="table" id="myTable">
                            <thead class="thead-dark" style="background-color: #00aaff;">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Subject)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Message)
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>




                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Subject)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>
                                        <td>

                                            @Html.ActionLink("Delete", "ContactUsDeleteRecord", "Admin", new { id = item.ID, }, new { @class = "btn btn-danger" })




                                        </td>
                                    </tr>
                                }

                            </tbody>


                        </table>


                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#myTable').DataTable();



    });

</script>