<div class="col-lg=8 col-md-8 AddPackageToDiv">
    <div class="sb2-2-add-blog sb2-2-1">
        <div class="box-inn-sp">
            <div class="inn-title">

                @if (TempData["hotel_Created"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <i class="fa fa-check-circle"></i>  @TempData["hotel_Created"]

                    </div>
                }
                else if (TempData["hotel_Not_Created"] != null)
                {

                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <i class="fa fa-times-circle"></i> @TempData["hotel_Not_Created"]
                    </div>

                }
                else
                {
                    <h4> Add New Hotel </h4>
                }





            </div>
            <div class="bor">

                @using (Html.BeginForm("CreateHotels2", "Admin", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.Hotels.Name, new { htmlAttributes = new { id = "list-title", type = "text", @class = "validate FontSize", placeholder = " Name Of Hotel" } })
                                @Html.ValidationMessageFor(model => model.Hotels.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.Hotels.Location, new { htmlAttributes = new { id = "list-title", @class = "materialize-textarea FontSize", placeholder = "Location Of Hotel" } })
                                @Html.ValidationMessageFor(model => model.Hotels.Location, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.Hotels.Gov_License, new { htmlAttributes = new { id = "list-title", @class = "materialize-textarea FontSize", placeholder = "Governament License" } })
                                @Html.ValidationMessageFor(model => model.Hotels.Gov_License, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.Hotels.Standard, new { htmlAttributes = new { id = "list-title", @class = "materialize-textarea FontSize", placeholder = "Hotel Standard" } })
                                @Html.ValidationMessageFor(model => model.Hotels.Standard, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field col s12">
                                @Html.EditorFor(model => model.Hotels.Charges, new { htmlAttributes = new { id = "list-title", @class = "materialize-textarea FontSize", placeholder = "hotel Charges" } })
                                @Html.ValidationMessageFor(model => model.Hotels.Charges, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    <div class="row">
                        <div class="input-field col s12">
                            <div class="file-field">
                                <div class="btn">
                                    <span>File</span>
                                    <input type="file" multiple name="Files" class="upload-button" id="upload_file" @*id="File1"*@ onchange="preview_image();" >
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate FontSize" type="text" placeholder="Upload Hotel Image">
                                </div>
                            </div>
                        </div>
                    </div>


                   

                            <div id="image_preview" class="col-md-12">


                          
                    
