@model BOL_business_object_layer_.tbl_user

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <head>
        <link href="~/my_css/login.css" rel="stylesheet" />

        <link href="<%= String.Format(" {0}dt={1}",ResolveUrl("~/my_css/login.css"),DateTime.Now.Ticks) %>


    </head>

<div class="container mainContainer">

    <div class="row">



        <div class="col-md-6 formImg">


            <img src="~/imgaes/second.jpg" class="img-responsive" />



        </div>



        <div class="col-md-6 " id="form">

            @using (Html.BeginForm("Login", "Security", new { area = "Security" }, FormMethod.Post))
            {

                <h3>  LOGIN FORM</h3>



                <div class="form-group row control-label">

                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2  col-form-label font-weight-bold lebel-padding" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control inputfield" })

                    </div>

                </div>


                <div class="form-group row control-label">

                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2  col-form-label font-weight-bold lebel-padding" })

                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control inputfield" })

                    </div>

                </div>





                <div class=" form-group">

                    <div class="input-group">


                        <input type="submit" class="btn btn-primary col-md-offset-10 subbtn" />
                    </div>

                </div>





            }




        </div>




    </div>

</div>
